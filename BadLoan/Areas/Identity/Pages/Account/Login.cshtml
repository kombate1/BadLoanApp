@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}




<style>
    body {
        background-color: #fceddd;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .login-form {
        width: 100%;
        max-width: 420px;
        background: none;
        padding: 0;
        border: none;
        box-shadow: none;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .login-form h1 {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .login-form p {
            text-align: center;
            margin-bottom: 2rem;
            color: #222;
            font-size: 1.1rem;
        }

    .form-group {
        width: 100%;
        margin-bottom: 1.5rem;
    }

    .login-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
        color: #222;
    }

    .login-input {
        width: 100%;
        padding: 16px 18px;
        border-radius: 10px;
        border: none;
        background: #d9d9d9;
        font-size: 1.1rem;
        margin-top: 0.3rem;
        margin-bottom: 0.2rem;
        outline: none;
    }

        .login-input:focus {
            background: #ececec;
        }

    .login-btn {
        width: 100%;
        background: #c49553;
        color: #222;
        font-size: 1.2rem;
        font-weight: bold;
        border: none;
        border-radius: 10px;
        padding: 18px 0;
        margin-top: 1.5rem;
        transition: background 0.2s;
    }

        .login-btn:hover {
            background: #b07e2d;
            color: #fff;
        }

    .login-links {
        margin-top: 1.5rem;
        text-align: center;
        width: 100%;
    }

        .login-links a {
            color: #c49553;
            text-decoration: none;
            margin: 0 10px;
            font-weight: 500;
            font-size: 1rem;
        }

            .login-links a:hover {
                text-decoration: underline;
            }
</style>


<div class="login-container">
    <form class="login-form" method="post" asp-page="/Login">
        <p>Create your account</p>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
               <div class="form-group">
                <label asp-for="Input.Email" class="login-label">Email</label>
                <input asp-for="Input.Email" class="form-control login-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />  
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
               </div>
                <div class="form-group ">
                    <label asp-for="Input.Password" class="login-label">Password</label>
                    <input asp-for="Input.Password" class="form-control login-input" autocomplete="current-password" aria-required="true" placeholder="password" /> 
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
        <div class="login-links">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                
                    <button id="login-submit" type="submit" class="login-btn">Log in</button>

        <div class="login-links">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>                          
         </div>
          
    </form>
</div>
   


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
