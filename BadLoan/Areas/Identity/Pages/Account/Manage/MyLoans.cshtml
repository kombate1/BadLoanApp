@page
@using BadLoan.Models
@using System.Globalization
@model BadLoan.Areas.Identity.Pages.Account.Manage.MyLoansModel

@functions {
    public string GetStatusBadge(string status)
    {
        return status?.ToLower() switch
        {
            "approved" => "bg-success",
            "rejected" => "bg-danger",
            "pending" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }
}

@{
    ViewData["Title"] = "My Loans";

}

<!-- Make sure Bootstrap 5 is loaded -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Beige background style -->
<style>
    body {
        background-color: #FFF1E2;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-center">My Loans</h2>

    <div class="mb-3 text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            ← Back to Home
        </a>
    </div>


    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Recent Loan Applications</h5>
                </div>
                <div class="card-body">
                    @if (Model.loans != null && Model.loans.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Type</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Monthly Repayment</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var loan in Model.loans)
                                    {
                                        <tr>
                                            <td>@loan.LoanType?.LoanTypeName</td>
                                            <td>@loan.LoanAmount.ToString("C", new CultureInfo("en-GH"))</td>
                                            <td>
                                                <span class="badge @GetStatusBadge(loan.Status)">
                                                    @loan.Status
                                                </span>
                                            </td>
                                            <td>@loan.SubmittedDate.ToShortDateString()</td>
                                            <td>@loan.monthlyRepayment.ToString("C", new CultureInfo("en-GH"))</td>
                                            <td>
                                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", "Admin", new { id = loan.Id })">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No loan applications found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
