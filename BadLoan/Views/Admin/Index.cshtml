@using System.Globalization
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8fafc;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 230px;
            background-color: #e3aa6b;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 30px 20px;
            position: fixed;
            height: 100vh;
            font-size: 1.1rem;
        }

        .profile {
            text-align: center;
            margin-bottom: 40px;
        }

            .profile h3 {
                margin: 5px 0;
                font-weight: bold;
                color: #000;
            }

            .profile p {
                font-size: 1rem;
                color: #333;
            }

        .menu {
            width: 100%;
            margin-top: 20px;
        }

            .menu a {
                display: block;
                padding: 14px 18px;
                text-decoration: none;
                color: white;
                font-weight: bold;
                border-radius: 8px;
                transition: background 0.3s;
            }

                .menu a:hover {
                    background-color: #d1975e;
                }

        .main-content {
            margin-left: 230px;
            padding: 30px;
            flex: 1;
            overflow-y: auto;
        }

        .header {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .toolbar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .search-bar input {
            padding: 10px 14px;
            border: 1px solid #ccc;
            border-radius: 6px;
            width: 250px;
        }

        .export-menu select {
            padding: 10px 14px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
        }

        .card {
            background-color: white;
            border-left: 6px solid #ccc;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

            .card h2 {
                font-size: 2rem;
                margin: 10px 0;
                color: #111827;
            }

            .card p {
                margin-top: 5px;
                font-size: 0.95rem;
                color: #6b7280;
            }

            .card i {
                float: right;
                font-size: 1.5rem;
                color: #3b82f6;
            }

        .card-all {
            border-left-color: #f59e0b;
        }

        .card-pending {
            border-left-color: #3b82f6;
        }

        .card-approved {
            border-left-color: #10b981;
        }

        .card-declined {
            border-left-color: #ef4444;
        }

        .card-disbursed {
            border-left-color: #14b8a6;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="profile">
                <h3>Glenn Inkoom</h3>
                <p>Approval Manager</p>
            </div>
            <div class="menu">
                <a asp-controller="Admin" asp-action="Index">Dashboard</a>
                <a asp-controller="Admin" asp-action="GetAllLoans">Applications</a>
                <a asp-controller="Account" asp-action="Logout">Log Out</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">Dashboard</div>
            <div class="toolbar">
                <div class="search-bar">
                    <input type="text" placeholder="Search applications..." />
                </div>
                <div class="export-menu">
                    <select>
                        <option disabled selected>All Status</option>
                        <option>Pending Loans</option>
                        <option>Declined Loans</option>
                        <option>Approved Loans</option>
                        <option>All Loans</option>
                    </select>
                </div>
            </div>
            <div class="cards">
                <div class="card card-disbursed">
                    <i class="fas fa-dollar-sign"></i>
                    <h2>@ViewBag.totalDisbursed.ToString("C", new CultureInfo("en-GH"))</h2>
                    <p>Total Disbursed</p>
                </div>

                <div class="card card-all">
                    <i class="fas fa-file-alt"></i>
                    <h2>@ViewBag.countAllLoans</h2>
                    <p>All Loans</p>
                </div>

                <div class="card card-pending">
                    <i class="fas fa-clock"></i>
                    <h2>@ViewBag.countPending</h2>
                    <p>Pending Loans</p>
                </div>

                <div class="card card-approved">
                    <i class="fas fa-check-circle"></i>
                    <h2>@ViewBag.countApproved</h2>
                    <p>Approved Loans</p>
                </div>

                <div class="card card-declined">
                    <i class="fas fa-times-circle"></i>
                    <h2>@ViewBag.countRejected</h2>
                    <p>Rejected Loans</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
