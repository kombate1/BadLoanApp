@model Customer
@{
    ViewData["Title"] = ""; // Removed the "Login" title
}

<style>
    body {
        background-color: #FFF1E2;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login_form {
        background-color: white;
        padding: 40px;
        max-width: 1000px;
        margin: 50px auto;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    fieldset {
        border: none;
        padding: 0;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }

    input[type="text"],
    input[type="email"],
    input[type="date"] {
        width: 100%;
        padding: 10px;
        background-color: #ddd;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-col {
        flex: 1;
        min-width: 300px;
    }

    .radio-group {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-top: 5px;
    }

        .radio-group input[type="radio"] {
            margin-right: 5px;
        }

    .btn-submit {
        background-color: #F4C085;
        color: black;
        border: none;
        padding: 10px 25px;
        border-radius: 5px;
        font-weight: bold;
        margin-right: 10px;
    }

        .btn-submit:hover {
            background-color: #e3aa6b;
        }

    .btn-cancel {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        padding: 10px 25px;
        border-radius: 5px;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
        }
    }
</style>

<div class="login_form">
    <form method="post">
        <section>
            <fieldset>
                <section class="form-row">
                    <div class="form-col">
                        <label asp-for="FirstName">First Name:</label>
                        <input type="email" asp-for="FirstName" placeholder="Enter your First Name" required />
                    </div>
                    <div class="form-col">
                        <label asp-for="LastName">Last Name:</label>
                        <input type="email" asp-for="LastName" placeholder="Enter your Surname" required />
                    </div>

                    <div class="form-col">
                        <label asp-for="DateOfBirth">Birthday:</label>
                        <input type="date" asp-for="DateOfBirth" placeholder="yyyy/mm/dd" />
                    </div>
                    <div class="form-col">
                        <label asp-for="Occupation">Occupation:</label>
                        <input type="text" asp-for="Occupation" placeholder="Lawyer/doctor etc..." />
                    </div>

                    <div class="form-col">
                        <label asp-for="EmployerName">Employer Name:</label>
                        <input type="text" asp-for="EmployerName" placeholder="Enter your employer's name" />
                    </div>
                    <div class="form-col">
                        <label asp-for="Gender">Select Gender:</label>
                        <div class="radio-group">
                            <label><input type="radio" asp-for="Gender" value="Male" /> Male</label>
                            <label><input type="radio" asp-for="Gender" value="Female" /> Female</label>
                            <label><input type="radio" asp-for="Gender" value="Other" /> Other</label>
                        </div>
                    </div>

                    <div class="form-col">
                        <label asp-for="EmployerContact">Employer Email:</label>
                        <input type="email" asp-for="EmployerContact" placeholder="Enter your employer's email" />
                    </div>
                    <div class="form-col">
                        <label asp-for="YearlyIncome">Yearly Income:</label>
                        <input type="text" asp-for="YearlyIncome" placeholder="eg. $5000" />
                    </div>

                    <div class="form-col">
                        <label asp-for="HomeAddress">Home Address:</label>
                        <input type="text" asp-for="HomeAddress" placeholder="eg. Adenta" />
                    </div>
                </section>

                <div class="pt-4">
                    <button type="button" class="btn-cancel">Cancel</button>
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </fieldset>
        </section>
    </form>
</div>
