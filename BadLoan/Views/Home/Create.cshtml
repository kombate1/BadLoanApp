@model Customer
@{
    ViewData["Title"] = "Perosnal Information"; // Removed the "Login" title
}
<style>
    body {
        background-color: #FFF1E2;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login_form {
        background-color: white;
        padding: 40px;
        max-width: 1000px;
        margin: 50px auto;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    fieldset {
        border: none;
        padding: 0;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }

    input[type="text"],
    input[type="email"],
    input[type="date"] {
        width: 100%;
        padding: 10px;
        background-color: #ffff;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-col {
        flex: 1;
        min-width: 300px;
    }

    .radio-group {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-top: 5px;
    }

        .radio-group input[type="radio"] {
            margin-right: 5px;
        }

    .btn-submit {
        background-color: #F4C085;
        color: black;
        border: none;
        padding: 10px 25px;
        border-radius: 5px;
        font-weight: bold;
        margin-right: 10px;
    }

        .btn-submit:hover {
            background-color: #e3aa6b;
        }

    .btn-cancel {
        background-color: white;
        color: black;
        border: 1px solid #ccc;
        padding: 10px 25px;
        border-radius: 5px;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
        }
    }
</style>

<div class="login_form">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post">
        <h2 class="form-title">Personal Information</h2>

        <section>
            <fieldset>
                <section class="form-row">
                    <div class="form-col">
                        <label asp-for="FirstName">First Name:</label>
                        <input type="text" asp-for="FirstName" placeholder="Enter your First Name" required />
                    </div>
                    <div class="form-col">
                        <label asp-for="LastName">Last Name:</label>
                        <input type="text" asp-for="LastName" placeholder="Enter your Surname" required />
                    </div>

                    <div class="form-col">
                        <label asp-for="DateOfBirth">Birthday:</label>
                        <input type="date" asp-for="DateOfBirth" placeholder="yyyy/mm/dd" />
                    </div>
                    <div class="form-col">
                        <label asp-for="Occupation">Occupation:</label>
                        <input type="text" asp-for="Occupation" placeholder="Lawyer/doctor etc..." />
                    </div>

                    <div class="form-col">
                        <label asp-for="PlaceOfWork">Place Of Work:</label>
                        <input type="text" asp-for="PlaceOfWork" placeholder="CBG/ etc..." />
                    </div>

                    <div class="form-col">
                        <label asp-for="EmployerName">Employer Name:</label>
                        <input type="text" asp-for="EmployerName" placeholder="Enter your employer's name" />
                    </div>
                    <div class="form-col">
                        <label asp-for="Gender">Select Gender:</label>
                        <div class="radio-group">
                            <label><input type="radio" asp-for="Gender" value="Male" /> Male</label>
                            <label><input type="radio" asp-for="Gender" value="Female" /> Female</label>
                        </div>
                    </div>

                    <div class="form-col">
                        <label asp-for="EmployerContact">Employer Email:</label>
                        <input type="email" asp-for="EmployerContact" placeholder="Enter your employer's email" />
                    </div>
                    <div class="form-col">
                        <label asp-for="AnnualIncome">Yearly Income:</label>
                        <input type="text" asp-for="AnnualIncome" placeholder="eg. $5000" />
                    </div>

                    <div class="form-col">
                        <label asp-for="HomeAddress">Home Address:</label>
                        <input type="text" asp-for="HomeAddress" placeholder="eg. Adenta" />
                    </div>
                </section>

                <div class="pt-4">
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </fieldset>
        </section>
    </form>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="background-color: #fffdd0; color: #000;">
                <div class="modal-header" style="background-color: #fff5cc; border-bottom: 1px solid #e6dca8;">
                    <h5 class="modal-title" id="successModalLabel">Success</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @TempData["SuccessMessage"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark" id="okBtn" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var successModal = new bootstrap.Modal(document.getElementById('successModal'));
            successModal.show();

            var okBtn = document.getElementById("okBtn");
            okBtn.addEventListener("click", function () {
                window.location.href = "/LoanApplication/Index";
            });
        });
    </script>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
