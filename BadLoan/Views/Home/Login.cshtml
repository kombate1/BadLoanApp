@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #fceddd;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .login-form {
        width: 100%;
        max-width: 420px;
        background: none;
        padding: 0;
        border: none;
        box-shadow: none;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .login-form h1 {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .login-form p {
            text-align: center;
            margin-bottom: 2rem;
            color: #ffff;
            font-size: 1.1rem;
        }

    .form-group {
        width: 100%;
        margin-bottom: 1.5rem;
    }

    .login-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
        color: #222;
    }

    .login-input {
        width: 100%;
        padding: 16px 18px;
        border-radius: 10px;
        border: none;
        background: #ffffff; /* Changed from #d9d9d9 to white */
        font-size: 1.1rem;
        margin-top: 0.3rem;
        margin-bottom: 0.2rem;
        outline: none;
    }

        .login-input:focus {
            background: #f2f2f2; /* optional: a soft focus effect */
        }


    .login-btn {
        width: 100%;
        background: #c49553;
        color: #ffff;
        font-size: 1.2rem;
        font-weight: bold;
        border: none;
        border-radius: 10px;
        padding: 18px 0;
        margin-top: 1.5rem;
        transition: background 0.2s;
    }

        .login-btn:hover {
            background: #b07e2d;
            color: #fff;
        }

    .login-links {
        margin-top: 1.5rem;
        text-align: center;
        width: 100%;
    }

        .login-links a {
            color: #c49553;
            text-decoration: none;
            margin: 0 10px;
            font-weight: 500;
            font-size: 1rem;
        }

            .login-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-container">
    <form class="login-form" method="post" asp-action="Login">
        <h1>Get Started</h1>
        <p>Create your account</p>
        <div class="form-group">
            <label class="login-label" for="email">Email Address</label>
            <input type="email" class="login-input" id="email" name="Email" placeholder="Enter your email address" required />
        </div>
        <div class="form-group">
            <label class="login-label" for="username">Username</label>
            <input type="text" class="login-input" id="username" name="Username" placeholder="Create a username" required />
        </div>
        <div class="form-group">
            <label class="login-label" for="password">Password (8 or more characters)</label>
            <input type="password" class="login-input" id="password" name="Password" placeholder="Create password" minlength="8" required />
        </div>
        <div class="form-group">
            <label class="login-label" for="confirmPassword">Confirm Password</label>
            <input type="password" class="login-input" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm password" required />
        </div>
        <button type="submit" class="login-btn">Sign Up</button>
        <div class="login-links">
            <a asp-controller="Home" asp-action="Login">Already have an account? Sign In</a><br />
            <a asp-controller="Home" asp-action="ForgotPassword">Forgot password?</a>
        </div>
    </form>
</div>