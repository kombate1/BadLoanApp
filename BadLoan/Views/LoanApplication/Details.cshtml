@model BadLoan.Models.LoanApplication
@using System.Globalization
@{
    Layout = null;
    ViewData["Title"] = "Loan Application Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9fafb;
        }

        .main-container {
            max-width: 1000px;
            margin: 40px auto;
            background-color: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.08);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .status {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-top: 10px;
        }

        .badge {
            background-color: #facc15;
            color: #92400e;
            font-weight: bold;
            padding: 6px 14px;
            border-radius: 20px;
        }

        .actions {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        .btn {
            text-decoration: none;
            padding: 10px 16px;
            font-weight: bold;
            border-radius: 6px;
            color: white;
            transition: background 0.3s;
        }

        .btn-approve {
            background-color: #10b981;
        }

        .btn-reject {
            background-color: #ef4444;
        }

        .btn-review {
            background-color: #3b82f6;
        }

        h2 {
            font-size: 1.6rem;
            margin-bottom: 10px;
        }

        .section {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .card {
            width: 48%;
            background-color: #f9fafb;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 20px;
        }

            .card h3 {
                font-size: 1.2rem;
                margin-bottom: 15px;
                border-bottom: 1px solid #d1d5db;
                padding-bottom: 10px;
            }

        .info-item {
            margin-bottom: 10px;
        }

            .info-item label {
                font-weight: bold;
                display: block;
                font-size: 0.95rem;
                color: #374151;
            }

            .info-item span {
                display: block;
                margin-top: 2px;
                color: #1f2937;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="header">
            <div>
                <h2>Loan Application Details</h2>
                <p>Application ID: <strong>@Model.Id</strong></p>
                <div class="status">
                    <span class="badge">@Model.Status</span>
                    <span>Submitted @@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                </div>
            </div>
            <div class="actions">
                <a asp-action="ApproveApplication" asp-route-id="@Model.Id" class="btn btn-approve">Approve</a>
                <a asp-action="RejectApplication" asp-route-id="@Model.Id" class="btn btn-reject">Reject</a>
                <a href="#" class="btn btn-review">Review</a>
            </div>
        </div>

        <div class="section">
            <div class="card">
                <h3>Customer Information</h3>
                <div class="info-item">
                    <label>Name:</label>
                    <span>@Model.Customer?.FirstName @Model.Customer?.LastName</span>
                </div>
                <div class="info-item">
                    <label>Email:</label>
                    <span>@@Model.Customer?.Email</span>
                </div>
                <div class="info-item">
                    <label>Employment Type:</label>
                    <span>@Model.Customer?.Occupation</span>
                </div>
                <div class="info-item">
                    <label>Annual Income:</label>
                    <span>@Model.AnnualIncome.ToString("C", new CultureInfo("en-US"))</span>
                </div>
            </div>

            <div class="card">
                <h3>Loan Details</h3>
                <div class="info-item">
                    <label>Requested Amount:</label>
                    <span>@Model.LoanAmount.ToString("C", new CultureInfo("en-US"))</span>
                </div>
                <div class="info-item">
                    <label>Purpose:</label>
                    <span>@Model.LoanType?.LoanTypeName</span>
                </div>
                <div class="info-item">
                    <label>Duration:</label>
                    <span>@Model.Duration year(s)</span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
