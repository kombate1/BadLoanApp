@model BadLoan.Models.LoanApplication
@using System.Globalization
@{
    Layout = null;
    ViewData["Title"] = "Loan Application Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9fafb;
            margin: 0;
            padding: 0;
        }

        .main-container {
            max-width: 1100px;
            margin: 40px auto;
            background-color: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.08);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: start;
        }

        .badge {
            background-color: #facc15;
            color: #92400e;
            font-weight: bold;
            padding: 6px 14px;
            border-radius: 20px;
            display: inline-block;
        }

        .submitted-date {
            color: #6b7280;
            margin-left: 10px;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            text-decoration: none;
            padding: 10px 16px;
            font-weight: bold;
            border-radius: 6px;
            color: white;
            transition: background 0.3s ease;
        }

        .btn-approve {
            background-color: #10b981;
        }

        .btn-reject {
            background-color: #ef4444;
        }

        .btn-review {
            background-color: #3b82f6;
        }

        h2 {
            font-size: 1.6rem;
            margin-bottom: 5px;
        }

        .section {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
            gap: 20px;
        }

        .card {
            flex: 1;
            background-color: #f9fafb;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 20px;
        }

            .card h3 {
                font-size: 1.2rem;
                margin-bottom: 15px;
                border-bottom: 1px solid #d1d5db;
                padding-bottom: 10px;
            }

        .info-item {
            margin-bottom: 12px;
        }

            .info-item label {
                font-weight: bold;
                font-size: 0.95rem;
                color: #374151;
                display: block;
            }

            .info-item span {
                display: block;
                margin-top: 2px;
                color: #1f2937;
            }

        .documents-section {
            margin-top: 40px;
        }

            .documents-section h3 {
                font-size: 1.2rem;
                margin-bottom: 15px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

        .file-list {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }

        .file-link {
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: #1d4ed8;
            background-color: #f3f4f6;
            border: 1px solid #d1d5db;
            padding: 10px 14px;
            border-radius: 8px;
            transition: background 0.3s;
        }

            .file-link:hover {
                background-color: #e0e7ff;
            }

            .file-link i {
                color: #6366f1;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="header">
            <div>
                <h2>Loan Application Details</h2>
                <div class="status">
                    <span class="badge">@Model.Status</span>
                    <span class="submitted-date">Submitted @@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                </div>
            </div>
            <div class="actions">
                <a asp-action="ApproveApplication" asp-route-id="@Model.Id" class="btn btn-approve">Approve</a>
                <a asp-action="RejectApplication" asp-route-id="@Model.Id" class="btn btn-reject">Reject</a>
                <a href="#" class="btn btn-review">Review</a>
            </div>
        </div>

        <div class="section">
            <div class="card">
                <h3><i class="fa-solid fa-user"></i> Customer Information</h3>
                <div class="info-item">
                    <label>Name:</label>
                    <span>@Model.Customer?.FirstName @Model.Customer?.LastName</span>
                </div>
                <div class="info-item">
                    <label>Email:</label>
                    <span>@@Model.Customer?.Email</span>
                </div>
                <div class="info-item">
                    <label>Employment Type:</label>
                    <span>@Model.Customer?.Occupation</span>
                </div>
                <div class="info-item">
                    <label>Annual Income:</label>
                    <span>@Model.AnnualIncome.ToString("C", new CultureInfo("en-US"))</span>
                </div>
            </div>

            <div class="card">
                <h3><i class="fa-solid fa-sack-dollar"></i> Loan Details</h3>
                <div class="info-item">
                    <label>Requested Amount:</label>
                    <span>@Model.LoanAmount.ToString("C", new CultureInfo("en-US"))</span>
                </div>
                <div class="info-item">
                    <label>Purpose:</label>
                    <span>@Model.LoanType?.LoanTypeName</span>
                </div>
                <div class="info-item">
                    <label>Duration:</label>
                    <span>@Model.Duration year(s)</span>
                </div>
            </div>
        </div>

        <div class="documents-section">
            <h3><i class="fa-solid fa-file-lines"></i> Submitted Documents</h3>
            <div class="file-list">
                <a href="#" class="file-link"><i class="fa-solid fa-file"></i> ID Copy</a>
                <a href="#" class="file-link"><i class="fa-solid fa-file-invoice-dollar"></i> Income Statement</a>
            </div>
        </div>

</body>
</html>
