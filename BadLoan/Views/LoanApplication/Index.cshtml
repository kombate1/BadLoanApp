@* @model LoanApplication *@
@model BadLoan.Models.ViewModels.LoanAttachmentViewModel


@if (TempData["ErrorMessage"] != null)
{
	<div id="error-toast" class="toast align-items-center text-bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
		<div class="d-flex">
			<div class="toast-body">
				@TempData["ErrorMessage"]
			</div>
			<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
		</div>
	</div>
	<script>
		setTimeout(function () {
			var toast = document.getElementById('error-toast');
			if (toast) toast.style.display = 'none';
		}, 4000);
	</script>
}

<style>
	body {
		background-color: #FFF1E2;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.form-container {
		background-color: white;
		padding: 40px;
		max-width: 1000px;
		margin: 50px auto;
		border-radius: 12px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
	}

	h2, h3 {
		font-weight: 700;
		margin-bottom: 25px;
		color: #000;
	}

	h3 {
		margin-top: 40px;
	}

	.form-row {
		display: flex;
		flex-wrap: wrap;
		gap: 20px;
	}

	.form-col {
		flex: 1;
		min-width: 300px;
	}

	label {
		font-weight: 600;
		display: block;
		margin-bottom: 6px;
	}

	input[type="text"],
	input[type="email"],
	input[type="number"],
	input[type="date"],
	input[type="file"] {
		width: 100%;
		padding: 10px;
		background-color: #ddd;
		border: 1px solid #ccc;
		border-radius: 5px;
		margin-bottom: 10px;
	}

	.radio-group {
		display: flex;
		gap: 15px;
		align-items: center;
		margin-top: 5px;
		margin-bottom: 15px;
	}

		.radio-group input[type="radio"] {
			margin-right: 5px;
		}

	.file-note {
		font-size: 0.85rem;
		color: #aa1b1b;
		font-style: italic;
	}

	.btn-section {
		margin-top: 30px;
		display: flex;
		gap: 15px;
	}

	.btn-submit {
		background-color: #F4C085;
		color: black;
		border: none;
		padding: 10px 25px;
		border-radius: 5px;
		font-weight: bold;
	}

		.btn-submit:hover {
			background-color: #e3aa6b;
		}

	.btn-cancel {
		background-color: white;
		color: black;
		border: 1px solid #ccc;
		padding: 10px 25px;
		border-radius: 5px;
		font-weight: bold;
	}

	@@media (max-width: 768px) {
		.form-row {
			flex-direction: column;
		}
	}
</style>

<div>
	

	<form enctype="multipart/form-data" method="post">
		<h3>Employment Details</h3>
		<div class="form-row">
			<div class="form-col">
				<div class="form-col">
					<label asp-for="AnnualIncome">Annual Income (GH₵)</label>
					<input type="number" asp-for="AnnualIncome" class="form-control" required />
					@Html.ValidationMessageFor(m => m.LoanApplicationDetails.AnnualIncome, "", new { @class = "text-danger" })
				</div>

				<div class="form-col">
					<label asp-for="LoanApplicationDetails.LoanAmount">Loan Amount (GH₵)</label>
					<input type="number" asp-for="LoanApplicationDetails.LoanAmount" class="form-control" required />
					@Html.ValidationMessageFor(m => m.LoanApplicationDetails.LoanAmount, "", new { @class = "text-danger" })
				</div>

				<div class="form-col">
					<label asp-for="LoanType">Type of Loan</label>
					<select asp-for="LoanType" class="form-control" required>
						<option value="">Select Loan Type</option>
						<option value="Personal">Personal Loan</option>
						<option value="Auto">Auto Loan</option>
						<option value="Mortgage">Mortgage Loan</option>
					</select>
				</div>

				<div class="form-col">
					<label asp-for="LoanApplicationDetails.Duration">Duration for Loan Repayment (in years)</label>
					<input type="number" asp-for="LoanApplicationDetails.Duration" class="form-control" required />
				</div>

			<div class="form-col">
				<label asp-for="Occupation">Occupation *</label>
				<input type="text" asp-for="Occupation" required />
			</div>

			
			<div class="form-col">
				<label>Proof of Employment *</label>
				<input type="file" name="employmentAttachments" multiple />
				<span class="file-note">*Click here to add document / image of up to 200MB*</span>
			</div>

		</div>

		
		
		
			<div class="form-col">
				<label>Proof of Income( Statement)</label>
				<input type="file" name="proofOfIncome" multiple />
			</div>
		</div>

		<div class="text-danger alert">
			@Html.Raw(ViewBag.MessageHtml)
		</div>

		<div class="btn-section">
			<button type="button" class="btn-cancel">Cancel</button>
			<button type="submit" class="btn-submit">Submit</button>
		</div>
	</form>
</div>


@if (TempData["SuccessMessage"] != null)
{
	<div class="toast-container position-fixed p-3" style="z-index: 9999">
		<div class="toast align-items-center text-white bg-success border-0 show" role="alert">
			<div class="d-flex">
				<div class="toast-body">
					@TempData["SuccessMessage"]
				</div>
				<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
			</div>
		</div>
	</div>

	<script>
		const toastElList = [].slice.call(document.querySelectorAll('.toast'));
		toastElList.forEach(function (toastEl) {
			new bootstrap.Toast(toastEl).show();
		});
	</script>
}
