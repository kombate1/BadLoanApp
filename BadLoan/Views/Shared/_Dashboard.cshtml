<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fdf9f3;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 230px;
            background-color: #d2964c;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 30px;
        }

        .profile {
            text-align: center;
            margin-bottom: 40px;
        }

            .profile img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                background-color: #eee;
                margin-bottom: 10px;
            }

            .profile h3 {
                margin: 5px 0;
                font-weight: bold;
                color: black;
            }

            .profile p {
                font-size: 0.9em;
                color: black;
            }

            .profile button {
                background-color: white;
                color: black;
                border: none;
                padding: 6px 12px;
                border-radius: 6px;
                cursor: pointer;
                font-weight: bold;
            }

        .menu {
            display: flex;
            flex-direction: column;
            width: 100%;
            padding-left: 20px;
        }

            .menu a {
                text-decoration: none;
                color: black;
                font-weight: bold;
                padding: 10px 0;
                cursor: pointer; 
            }

        .main-content {
            flex: 1;
            padding: 30px;
        }

        .header {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .cards {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
        }
       .cards:hover{

       }
        .card {
            flex: 1 1 200px;
            background-color: white;
            border-radius: 16px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            padding: 30px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover,
            .card.active {
                transform: translateY(-8px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            }

            .card h2 {
                font-size: 2.5rem;
                margin: 0;
                color: black;
            }

            .card p {
                margin-top: 10px;
                font-size: 1rem;
                font-weight: bold;
                color: black;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="profile">
                <img src="#" alt="Profile Picture">
                <h3>Glenn Inkoom</h3>
                <p>Software Developer, BAD Company</p>
                <button>Check Profile</button>
            </div>
            <div class="menu">
                <a onclick="setActiveCard('pending')">Pending Loans</a>
                <a onclick="setActiveCard('declined')">Declined Loans</a>
                <a onclick="setActiveCard('approved')">Approved Loans</a>
                <a onclick="setActiveCard('all')">All Loans</a>
                <a href="#">Log Out</a>
            </div>
        </div>
        <div class="main-content">
            <div class="header">Dashboard</div>
            <div class="cards">
                <div class="card" id="card-all">
                    <h2>39</h2>
                    <p>All Loans</p>
                </div>
                <div class="card" id="card-pending">
                    <h2>9</h2>
                    <p>Pending Loans</p>
                </div>
                <div class="card" id="card-approved">
                    <h2>22</h2>
                    <p>Approved Loans</p>
                </div>
                <div class="card" id="card-declined">
                    <h2>8</h2>
                    <p>Rejected Loans</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function setActiveCard(type) {
            document.querySelectorAll('.card').forEach(card => card.classList.remove('active'));
            const cardMap = {
                pending: 'card-pending',
                declined: 'card-declined',
                approved: 'card-approved',
                all: 'card-all'
            };
            document.getElementById(cardMap[type]).classList.add('active');
        }
    </script>
</body>
</html>
