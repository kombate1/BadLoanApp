@model int

<a href="/Notifications" class="notification-icon" style="position: relative;">
    <i class="fa-solid fa-bell" style="font-size: 18px;"></i>
    @if (Model > 0)
    {
        <span class="badge" style="
                position: absolute;
                top: -5px;
                right: -10px;
                background: red;
                color: white;
                border-radius: 50%;
                padding: 3px 7px;
                font-size: 12px;
            ">
            @ViewBag.notificationsCount
        </span>

       
    }
</a>